<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TeamFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Fikstür"
            android:layout_weight="1"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Puan Durumu"
            android:layout_weight="1"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Kadro"
            android:layout_weight="1"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Teknik Ekip"
            android:layout_weight="1"></Button>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/standingsTitleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">



        <TextView
            android:id="@+id/teamStandingTeamName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@color/gray"
            android:layout_gravity="center"
            android:text="Takım"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:textSize="15dp"
            android:layout_weight="1"></TextView>

        <TextView
            android:id="@+id/teamStandingGamePlayedTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="O"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingVictoryTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="G"
            android:background="@color/gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingTieTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="B"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingDefeatTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@color/gray"
            android:text="M"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingGoalScoredTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="A"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingGoalConcededTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@color/gray"
            android:text="Y"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingAverageTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="AV"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"></TextView>

        <TextView
            android:id="@+id/teamStandingPointTextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="P"
            android:layout_gravity="center"
            android:textSize="15dp"
            ></TextView>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/teamAlligmentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıralama"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oynadığı Süre"
            android:textSize="15dp"
            android:layout_gravity="">

        </TextView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamFixtureRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamStandingsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamPlayersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamtechnicalTeamRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


</androidx.appcompat.widget.LinearLayoutCompat>